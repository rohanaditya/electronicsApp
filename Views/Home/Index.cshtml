@model List<electronicsApp.Models.UrlContent>

@{
    ViewData["Title"] = "Home Page";
}

<body>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-12">
                <div class="card mb-3 h-100" style="width: 18rem;">
                    <img src="@item.batchno" class="card-img-top" style="max-height: 12rem; object-fit: contain;" alt="...">
                    <div class="card-body d-flex flex-column h-100">
                        <h6 class="card-title">@item.pname</h6>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <p class="card-text mb-2">Rs. @item.price</p>
                            <a class="btn btn-success">BUY</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>



